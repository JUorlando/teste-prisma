{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/@types", "node_modules/@types"],
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "package.json", "env.d.ts"],
  "exclude": ["node_modules"]
}

